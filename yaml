 #key value pair in flow type
 {a: 'b', age: '50'}
...

#string datatype
hello : kathrin
hey : "wasss upp"
job : 'swe'
#to write in mutiple lines
descr : |
this is a 
general description
#to take each word in specific line and
#consider it as same line
message : >
hey
this 
is me 
how are you 
#the above message is similar to this
message : hey this is me how are you 
#dataTypes
Integer : 100
Float : 23.35

#boolean
boolean : No #n,N,FALSE,False,false
#same for true -> yes ,y,Y,True,TRUE,true

#specify the type
zero : !!int 0
postiveNum : !!int 45
negativeNum : !!int -45
binaryNum : !!int 0b11001
octalNum : !!int 06574
hexa : !!int 0x45
commaValue  : !!int 54_000 #54,000
exponential number : 6.023E56
#floating number
marks : !!float 56.89
inifinte : !!float .inf
not a number :  .nan

#null
surname : !!null Null #or null NULL ~
~: this is a null key

#date and time
date : !!timestamp 2020-12-02
ADVANCED DATATYPES
student : !!seq
- marks
- negativeNum
- roll_num
#like this also
cities : [new delhi, mumbai]

#some of the keys of the seq will be empty
#sparse seq
sparse seq:
- hey 
- how
-
- Null
- sup
#Nested seq
-
    - mango
    - apple
    - banana
-
    - marks
    - telugu

# key: value pairs are called maps
!!map

#nested mappin map within a map
name: Kunal Kushwaha
role:
   age: 78
   job: student
# same as
name : kunal Kushwaha
role : {age : 78,job : student}

#pairs: key may have duplicate values
# !!pairs
pair example : !!pairs
 - job: student
 - job : teacher

 #same as
# this will be an array of hashtables
pair example : !!pairs [job: student,job : teacher]

# !! set will allow you to have unique values
names : !!set
? kunal 
? kunal
? apoorva

#dictionary !!omap
People : !!omap
  - kunal :
      name : Kunal Kushawaha
      age  : 78
      height : 678
  - Rahul:
      name : ravi
      age : 45
      height : 677
#reusing some properities
liking : 
  fav fruit: mango
  dislikes : grapes
person1 :
  name : abc
  fav fruit: mango
  dislikes : grapes
person2 :
  name : def
  fav fruit: mango
  dislikes : grapes
person3:
  name : dsdf
  fav fruit: mango
  dislikes : grapes

#reusing some properities
liking : &likes
  fav fruit: mango
  dislikes : grapes
person1 :
  name : abc
  <<: *likes
person2 :
  name : def
  <<: *likes
  dislikes : berries
person3:
  name : dsdf
  fav fruit: mango
  dislikes : grapes





